<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searc_back_Constraintlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

    <ImageView
        android:id="@+id/iv_gif_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/loadgif"
        android:visibility="gone"
        />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/intv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/fragment_btn_search"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:qmui_backgroundColor="@color/colorPrimary"
        android:background="@drawable/popselect"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intv_search"
        android:padding="10dp"
        android:layout_margin="@dimen/margin"
        android:text="@string/fragment_btn_search" />

</androidx.constraintlayout.widget.ConstraintLayout>