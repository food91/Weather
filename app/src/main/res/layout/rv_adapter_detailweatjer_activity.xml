<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_marginStart="20dp"
    >
    <TextView
        android:id="@+id/tv_rv_adapter_detailweather_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/btn_ghost_blue_border_disabled"
        />
    <TextView
        android:id="@+id/tv_rv_adapter_detailweather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="@color/btn_ghost_blue_border_disabled"
        />
    <ImageView
        android:id="@+id/iv_rv_adapter_detailweather_wea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/tv_rv_adapter_detailweather_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/btn_ghost_blue_border_disabled"
        />
    <TextView
        android:id="@+id/tv_rv_adapter_detailweather_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="@color/btn_ghost_blue_border_disabled"
        />

</LinearLayout>