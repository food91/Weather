<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@mipmap/locatback">



  <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="5dp"
      app:cardElevation="0dp"
      >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="30dp">


      <com.google.android.material.button.MaterialButton
          android:id="@+id/login_sure_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/login_password_text"
          android:layout_marginTop="44dp"
          android:padding="10dp"
          android:text="@string/login_sure" />

      <com.google.android.material.button.MaterialButton
          android:id="@+id/login_exit_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@id/login_sure_button"
          android:layout_marginStart="120dp"

          android:layout_toEndOf="@id/login_sure_button"
          android:padding="10dp"
          android:text="@string/login_exit" />

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/login_password_text"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/login_user_text"
          android:layout_alignLeft="@id/login_user_text"
          android:layout_marginTop="25dp"
          android:hint="@string/login_tip_password"
          android:inputType="textPassword"
          android:padding="10dp"
          android:textAppearance="?android:attr/textAppearanceButton" />

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/login_user_text"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imageView2"
          android:layout_marginTop="25dp"
          android:hint="@string/login_tip_user"
          android:padding="10dp"
          android:textAppearance="?android:attr/textAppearanceButton" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="20dp"
          android:src="@drawable/ic_login_24dp" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@id/login_user_text"
          android:layout_centerHorizontal="true"
          android:textSize="@dimen/card_text"
          android:textColor="@color/black"
          android:text="@string/app_name" />


    </RelativeLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>